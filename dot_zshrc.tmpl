export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"

plugins=(
	git
	zsh-syntax-highlighting
	zsh-autosuggestions
)

source $ZSH/oh-my-zsh.sh

# User configuration

source "$HOME/.sdkman/bin/sdkman-init.sh"

## mac specific
source /opt/homebrew/opt/kube-ps1/share/kube-ps1.sh
PROMPT='$(kube_ps1)'$PROMPT

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='nvim'
fi

eval $(thefuck --alias)

function todo { echo "- [ ] #t $1" >> ~/Documents/Obsidian\ Vault/Todo\ Source.md  }

# LogScale configuration
export HUMIO_BASE_URL="https://cloud.humio.com"
export HUMIO_REPOSITORY="ctp-eu"
export HUMIO_API_TOKEN="{{ onepasswordRead "op://Private/HUMIO_API_TOKEN/password" }}"

# Load kubectl completion lazily on first use
if [[ /opt/homebrew/bin/kubectl ]]; then
  kubectl() {
    unfunction kubectl
    source <(command kubectl completion zsh)
    command kubectl "$@"
  }
fi

# The next line updates PATH for the Google Cloud SDK.
if [ -f "$HOME/google-cloud-sdk/path.zsh.inc" ]; then . "$HOME/google-cloud-sdk/path.zsh.inc"; fi

# The next line enables shell command completion for gcloud.
if [ -f "$HOME/google-cloud-sdk/completion.zsh.inc" ]; then . "$HOME/google-cloud-sdk/completion.zsh.inc"; fi
# Export path to tfswitch terraform
export PATH="$HOME/bin:$PATH"

source <(fzf --zsh 2>/dev/null)

